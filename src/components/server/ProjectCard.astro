---
import LinkBtn from '../client/LinkBtn'
import Icon from 'astro-icon'
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

export interface Props {
	name: string
	technologies: string[]
	githubUrl: string
	src: ImageMetadata
}

const { name, githubUrl, technologies, src } = Astro.props
---

<div class="flex w-full flex-col items-center">
	<Image
		src={src}
		alt={`${name} preview`}
		class="max-h-[22rem] rounded-xl shadow-inner"
	/>

	<div class="flex h-12 w-[98%] rounded-bl-xl rounded-br-xl bg-base-200">
		<span
			class="flex w-1/4 items-center justify-center text-lg font-bold text-base-content"
		>
			{name}
		</span>
		<div
			class="flex w-1/2 items-center justify-center gap-2 border-l-2 border-r-2"
		>
			{
				technologies.map((tech) => (
					<Icon
						name={`mdi:${tech}`}
						class="h-6 w-6 text-neutral duration-200 hover:-translate-y-2"
					/>
				))
			}
		</div>
		<div class="w-1/4 rounded-bl-none rounded-tl-none rounded-tr-none">
			<LinkBtn
				client:visible
				name="GitHub"
				link={githubUrl}
				styles="h-full w-full btn-ghost normal-case rounded-bl-none rounded-tl-none rounded-tr-none hover:btn-neutral rounded-br-xl"
			>
				<Icon name="mdi:github" class="h-6 w-6" />
			</LinkBtn>
		</div>
	</div>
</div>
