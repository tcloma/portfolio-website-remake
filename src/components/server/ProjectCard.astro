---
import LinkBtn from '../client/LinkBtn'
import Icon from 'astro-icon'
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

export interface Props {
	name: string
	technologies: string[]
	githubUrl: string
	src: ImageMetadata
}

const { name, githubUrl, technologies, src } = Astro.props
---

<div class="flex w-full flex-col items-center">
	<Image
		src={src}
		alt={`${name} preview`}
		class="rounded-xl border-2 max-h-[22rem] border-neutral shadow-inner"
	/>

	<div class="flex h-12 w-[98%] rounded-bl-xl rounded-br-xl bg-base-200">
		<span
			class="flex w-1/4 items-center justify-center text-lg font-bold text-base-content"
		>
			{name}
		</span>
		<div
			class="flex w-1/2 items-center justify-center gap-2 border-l-2 border-r-2"
		>
			{
				technologies.map((tech) => (
					<Icon name={`mdi:${tech}`} class="h-6 w-6 text-neutral hover:-translate-y-2 duration-200" />
				))
			}
		</div>
		<div
			class="btn-ghost btn w-1/4 rounded-bl-none rounded-tl-none rounded-tr-none hover:btn-neutral"
		>
			<Icon name="mdi:github" class="h-6 w-6" />
			<LinkBtn client:visible name="GitHub" link={githubUrl} />
		</div>
	</div>
</div>
