---
export interface Props {
	name: string
}

const { name } = Astro.props
const url = Astro.url.pathname

function isOnPathName() {
	if (url.endsWith('/')) {
		return name == 'home'
	} else {
		return url.localeCompare(`/${name}`) == 0
	}
}
---

<a
	href={name == 'home' ? '/' : name}
	class={isOnPathName()
		? 'btn btn-active w-1/3'
		: 'btn w-1/3'}>{name}</a
>
