---
export interface Props {
	name: string
}

const { name } = Astro.props
const url = Astro.url.pathname

function isOnPathName() {
	if (url.endsWith('/')) {
		return name == 'home'
	} else {
		return url.split('/')[1].localeCompare(name) == 0
	}
}
---

<a
	href={name == 'home' ? '/' : `/${name}`}
	class={isOnPathName()
		? 'btn btn-neutral text-neutral-content w-1/3'
		: 'btn hover:btn-outline hover:border-2 w-1/3'}
	>{name}</a
>
