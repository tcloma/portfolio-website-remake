---
export interface Props {
	name: string
}

const { name } = Astro.props
const url = Astro.url.pathname

function isOnPathName() {
    if (url.endsWith('/')) {
        return name == 'home'
    } else {
        return url.localeCompare(`/${name}`) == 0 
    }
    
}

---

<a href={name == 'home' ? '/' : name} class="btn rounded-md bg-black text-white border-none">{name}</a>
<p>{isOnPathName()}</p>