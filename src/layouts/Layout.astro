---
import About from '../components/server/About.astro'
import NavBar from '../components/server/NavBar.astro'
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="grid h-screen place-items-center bg-base-100 antialiased">
		<section
			class="grid h-[90vh] w-[95vw] grid-cols-3 rounded-2xl bg-base-100 px-10 py-8 border-[1.5px]"
		>
			<div class="border-r-[1.5px] border-dotted border-base-300 pr-[1.25rem]">
				<About />
			</div>
			<div class="relative col-span-2 overflow-hidden">
				<NavBar />
				<div
					class="flex h-full flex-col items-center gap-9 overflow-scroll px-[1.25rem] py-4 pt-16"
				>
					<slot />
				</div>
			</div>
		</section>
	</body>
</html>

<style is:global></style>
